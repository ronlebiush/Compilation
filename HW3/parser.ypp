    void closeScope(){
        if(!symtable.tableStack.empty()){
                output::endScope();
                symtable.tableStack.top()->printTable();
                symtable.tableStack.pop();
                symtable.offsetsStack.pop();
        }
    }
    void cleanUpNodes() {
    for (Node* node : allocatedNodes) {
        delete node;
    }
    allocatedNodes.clear();
}
